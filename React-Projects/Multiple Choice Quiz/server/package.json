{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.0.0",
    "postgres": "^3.4.3",
    "shared": "workspace:*",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.8",
    "@vitest/ui": "^4.0.18",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
